<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.MediaControlFragment">

    <Button
        android:id="@+id/back"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="Back"
        android:scaleX="-1"
        android:background="@drawable/media_next"/>

    <Button
        android:id="@+id/skipBack"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="back 10 seconds"
        android:scaleX="-1"
        android:background="@drawable/media_skip"
        android:layout_toEndOf="@id/back" />

    <Button
        android:id="@+id/playPause"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="Play or pause"
        android:background="@drawable/media_play"
        android:layout_toEndOf="@id/skipBack" />

    <Button
        android:id="@+id/skipForward"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="skip forward 10 seconds"
        android:background="@drawable/media_skip"
        android:layout_toEndOf="@id/playPause" />

    <Button
        android:id="@+id/next"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="next"
        android:background="@drawable/media_next"
        android:layout_toEndOf="@id/skipForward" />

    <Button
        android:id="@+id/shuffle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="shuffle"
        android:background="@drawable/media_shuffle"
        android:layout_below="@+id/back"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/repeat"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="repeat"
        android:background="@drawable/media_repeat"
        android:layout_below="@+id/back"
        android:layout_toEndOf="@id/shuffle" />

    <Button
        android:id="@+id/bookmark"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="bookmark"
        android:background="@drawable/media_bookmark"
        android:layout_below="@+id/back"
        android:layout_toEndOf="@id/repeat" />

</RelativeLayout>